<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Articles</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-800 font-sans">

    <!-- Navigation Bar -->
    <nav class="bg-indigo-600 text-white py-4">
        <div class="max-w-screen-lg mx-auto flex justify-between items-center px-4">
            <a href="/" class="text-2xl font-bold">My Website</a>
            <div class="space-x-6">
                <a href="/login" class="hover:underline">Login</a>
                <a href="/signup" class="hover:underline">Sign Up</a>
                <a href="/logout" class="hover:underline">Logout</a>
            </div>
        </div>
    </nav>

    <!-- Articles List -->
    <h1 class="text-4xl text-center font-bold my-8">Article List</h1>
    <div class="max-w-screen-lg mx-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 px-4">
        {% for article in articles %}
            <div class="bg-white rounded-lg shadow-lg hover:shadow-xl transition duration-300">
                <div class="p-6">
                    <h2 class="text-2xl font-semibold text-center text-indigo-600">
                        {{ article.title | e }}
                    </h2>
                </div>
                <div class="p-6 bg-gray-50 rounded-b-lg">
                    <p class="text-base text-gray-700">{{ article.description | e }}</p>
                    <p class="text-base text-gray-700">{{ article.photo | e }}</p>
                    <div class="text-center mt-4">
                        <a href="/article?id={{ article.id }}" 
                           class="inline-block px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition duration-300">
                            View Article
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-6 mt-12">
        <div class="max-w-screen-lg mx-auto text-center">
            <p>&copy; 2025 My Website. All rights reserved.</p>
        </div>
    </footer>

</body>
</html>
